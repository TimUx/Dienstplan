<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- Set the timeout for NuGet operations to 300 seconds (5 minutes) -->
    <add key="http.timeout" value="300000" />
  </config>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
  <!-- Disable signature verification to avoid CRL check failures -->
  <signatureValidationMode>accept</signatureValidationMode>
</configuration>
